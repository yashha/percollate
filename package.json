{
	"name": "percollate-fork",
	"version": "0.7.0",
	"description": "A command-line tool to grab web pages as PDF",
	"main": "index.js",
	"repository": "yashha/percollate",
	"license": "MIT",
	"dependencies": {
		"commander": "^5.1.0",
		"css": "^2.2.4",
		"epub-gen": "^0.1.0",
		"franc-all": "^6.0.0",
		"got": "^11.3.0",
		"iso-639-3": "^2.1.0",
		"jsdom": "^16.2.2",
		"nunjucks": "^3.2.1",
		"ora": "^4.0.4",
		"puppeteer": "^3.3.0",
		"slugify": "^1.4.0",
		"srcset": "^2.0.1",
		"tmp": "^0.2.1",
		"turndown": "^6.0.0",
		"uuid": "^8.1.0"
	},
	"bin": {
		"percollate": "./cli.js"
	},
	"engines": {
		"node": ">= 8.6.0"
	},
	"devDependencies": {
		"ava": "^3.8.2",
		"eslint": "^7.2.0",
		"eslint-config-airbnb-base": "^14.1.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-import": "^2.21.2",
		"eslint-plugin-prettier": "^3.1.3",
		"husky": "^4.2.5",
		"nyc": "^15.1.0",
		"prettier": "^2.0.5",
		"pretty-quick": "^2.0.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"scripts": {
		"lint": "eslint *.js",
		"test": "nyc --reporter=text --reporter=json ava"
	},
	"prettier": {
		"bracketSpacing": true,
		"semi": true,
		"singleQuote": true,
		"trailingComma": "none",
		"useTabs": true,
		"tabWidth": 4,
		"jsxBracketSameLine": false,
		"arrowParens": "avoid",
		"printWidth": 80
	},
	"keywords": [
		"puppeteer",
		"cli",
		"pdf",
		"readability"
	]
}
